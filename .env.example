# SmartTrack Business Analytics Environment Configuration

# Database Configuration
DATABASE_URL=mysql+pymysql://smarttrack_user:SmartTrack2024Pass!@mysql:3306/smarttrack_db

# Application Security
SECRET_KEY=SmartTrack2024SecretKey!ChangeInProduction
JWT_SECRET_KEY=SmartTrackJWT2024!ChangeInProduction
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
LOG_LEVEL=INFO
DEBUG=False
ENVIRONMENT=production

# CORS Settings
CORS_ORIGINS=http://localhost:8501,https://yourdomain.com

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@smarttrack.com

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads/

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # 1 hour